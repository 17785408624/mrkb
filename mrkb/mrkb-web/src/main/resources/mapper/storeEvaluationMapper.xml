<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mrkb.dao.dao.StoreEvaluationMapper" >
    <insert id="addEvaluation" parameterType="com.mrkb.dao.modle.store.StoreEvaluation" useGeneratedKeys="true" keyProperty="evaluation_id">
		insert into store_evaluation 
		(store_id,store_name,weixin_nickname,weixin_portrait,evaluation_date,evaluation_value,super_evaluation_id,read_num,user_basics_id,status_state) 
		value (#{store_id,jdbcType=INTEGER}
		,#{store_name,jdbcType=VARCHAR}
		,#{weixin_nickname,jdbcType=VARCHAR}
		,#{weixin_portrait,jdbcType=VARCHAR}
		,#{evaluation_date,jdbcType=BIGINT}
		,#{evaluation_value,jdbcType=VARCHAR}
		,#{super_evaluation_id,jdbcType=INTEGER}
		,#{read_num,jdbcType=INTEGER}
		,#{user_basics_id,jdbcType=INTEGER}
		,1
		);
	</insert>
	
    <select id="findEvaluationNew" resultType="com.mrkb.dao.modle.store.StoreEvaluation" parameterType="java.util.HashMap">
		select * from store_evaluation where status_state=0 and store_id=#{store_id,jdbcType=INTEGER} order by evaluation_date desc limit 0,1
	</select>
	<select id="findEvaluation" resultType="com.mrkb.dao.modle.store.StoreEvaluation" parameterType="java.util.HashMap">
		select * from store_evaluation where 1=1 
		<if test="status_state!=null">
		and  status_state=#{status_state,jdbcType=INTEGER}
		</if>
		<if test="store_id!=null">
		 and store_id=#{store_id,jdbcType=INTEGER} 
		 </if>
		 order by evaluation_date desc
	</select>
	<update id="deleteEvaluation" parameterType="com.mrkb.dao.modle.store.StoreEvaluation">
		update store_evaluation set status_state=#{status_state,jdbcType=INTEGER} where evaluation_id=#{evaluation_id,jdbcType=INTEGER};
	</update>
    <!-- 查询商品评论信息详情（单个） -->
     <select id="findStoreEvaluationById" parameterType="com.mrkb.dao.modle.store.StoreEvaluation" resultType="com.mrkb.dao.modle.store.StoreEvaluation">
       select * from store_evaluation where 1=1 
     	<if test="evaluation_id!=null">
     	 and evaluation_id =#{evaluation_id,jdbcType=INTEGER}
     	</if>
     </select>
     <!-- 根据evaluation_id删除单条商品评论 -->
     <delete id="deleteStoreEvaluationById" parameterType="com.mrkb.dao.modle.store.StoreEvaluation">
       delete from store_evaluation where 1=1 
       <if test="evaluation_id!=null">
     	 and evaluation_id =#{evaluation_id,jdbcType=INTEGER}
     	</if>
     </delete>
     <update id="updateStoreEvaluationState" parameterType="com.mrkb.dao.modle.store.StoreEvaluation">
		update store_evaluation set 
			<if test="status_state!=null">
			status_state=#{status_state,jdbcType=INTEGER}
			</if>
		where 1=1
		and evaluation_id = #{evaluation_id,jdbcType=INTEGER}
	</update>
     
</mapper>