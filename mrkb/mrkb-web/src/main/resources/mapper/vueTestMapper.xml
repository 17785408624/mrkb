<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mrkb.dao.dao.VueTestDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.mrkb.dao.modle.VueTest" id="VueTestMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="addrr" column="addrr"/>
        <result property="work_date" column="work_date"/>
        <result property="state" column="state"/>
        <result property="major" column="major"/>
    </resultMap>

     <sql id="Base_Column_List">
		`id`,`name`, `addrr`, `work_date`, `state`, `major`
     </sql>
    <select id="list" resultType="com.mrkb.dao.modle.VueTest">
        select
        <include refid="Base_Column_List"/>
        from vue_test 
        <if test="major != null">where name = #{name}</if>
        ORDER BY id DESC
    </select>

    <insert id="add" parameterType="com.mrkb.dao.modle.VueTest" useGeneratedKeys="true" keyProperty="id">
		insert into vue_test
		(
			`name`, `addrr`, `work_date`, `state`, `major`
		)
		values
		(
			#{name}, 
			#{addrr}, 
			#{work_date}, 
			#{state}, 
			#{major}
		)
	</insert>

    <update id="edit" parameterType="com.mrkb.dao.modle.VueTest">
        update vue_test
        <set>
            <if test="name != null">`name` = #{name},</if>
            <if test="addrr != null">`addrr` = #{addrr},</if>
            <if test="work_date != null">`work_date` = #{work_date},</if>
            <if test="state != null">`state` = #{state},</if>
            <if test="major != null">`major` = #{major}</if>
        </set>
        where id = #{id}
    </update>
  
    <delete id="del">
		delete from vue_test where id = #{id}
	</delete>

</mapper>