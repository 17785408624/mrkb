<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mrkb.dao.dao.UserGradeMapper" >
  <select id="findUserGrade" resultType="com.mrkb.dao.modle.user.UserGrade" parameterType="int">
     SELECT user_grade_id,grade_name,grade_describe,grade_nickname,grade_benefit,upgrade_order,grade_introduce 
     FROM user_grade WHERE user_grade_id=#{user_grade_id,jdbcType=INTEGER}
  </select>
  <select id="selectAllGrade" resultType="com.mrkb.dao.modle.user.UserGrade">
     SELECT user_grade_id,grade_name,grade_describe,grade_nickname,
     grade_benefit,upgrade_order,grade_introduce FROM user_grade
  </select>
  <select id="selectGradeToUpgrade_order" resultType="com.mrkb.dao.modle.user.UserGrade" parameterType="int">
  SELECT user_grade_id,grade_name,grade_describe,grade_nickname,grade_benefit,upgrade_order 
  FROM user_grade WHERE upgrade_order=#{upgrade_order,jdbcType=INTEGER}
  </select>
  <update id="updateUserGrade" parameterType="com.mrkb.dao.modle.user.UserGrade">
	UPDATE user_grade  set 
	  grade_describe=#{grade_describe,jdbcType=VARCHAR}
	 ,grade_nickname=#{grade_nickname,jdbcType=VARCHAR}
	 ,grade_name=#{grade_name,jdbcType=VARCHAR}
	 ,grade_introduce=#{grade_introduce,jdbcType=VARCHAR}
     WHERE user_grade_id=#{user_grade_id,jdbcType=INTEGER}
	</update>
	<!-- 新增会员等级 -->
 <insert id="userGradeAdd" parameterType="com.mrkb.dao.modle.user.UserGrade" useGeneratedKeys="true" keyProperty="user_grade_id" >
  insert into user_grade
		(grade_name,grade_describe,grade_nickname,grade_introduce) 
		value(
		 #{grade_name,jdbcType=VARCHAR}
		,#{grade_describe,jdbcType=VARCHAR}
		,#{grade_nickname,jdbcType=VARCHAR}
		,#{grade_introduce,jdbcType=VARCHAR}
		);
 </insert>
</mapper>