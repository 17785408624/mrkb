<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrkb.dao.dao.BankMapper">
 <!-- 新增协议 -->
 <insert id="addBank" parameterType="com.mrkb.dao.modle.bank.BankEntity" useGeneratedKeys="true" keyProperty="card_id" >
  insert into real_bank_card
		(user_basics_id,bank_card,affiliated_bank,tel,card_type,depositBank_info,cardholder_name) 
		value(
		 #{user_basics_id,jdbcType=INTEGER}
		,#{bank_card,jdbcType=VARCHAR}
		,#{affiliated_bank,jdbcType=VARCHAR}
		,#{tel,jdbcType=VARCHAR}
		,#{card_type,jdbcType=INTEGER}
		,#{depositBank_info,jdbcType=VARCHAR}
		,#{cardholder_name,jdbcType=VARCHAR}
		);
 </insert>
 <!-- 查询所有银行卡信息-->
 <select id="findAllBank" resultType="com.mrkb.dao.modle.bank.BankEntity" parameterType="com.mrkb.dao.modle.bank.BankEntity">
         select * from real_bank_card where 1=1 
         <if test="user_basics_id!=null">
            and user_basics_id = #{user_basics_id,jdbcType=INTEGER}
         </if>
         order by card_id ASC;
 </select>
 <!-- 查询单个银行卡信息-->
 <select id="findBankById" resultType="com.mrkb.dao.modle.bank.BankEntity" parameterType="com.mrkb.dao.modle.bank.BankEntity">
         select * from real_bank_card where 1=1
          and card_id =#{card_id,jdbcType=INTEGER}
 </select>
 <!-- 修改单个银行卡信息-->
 <update id="updateBank" parameterType="com.mrkb.dao.modle.bank.BankEntity">
	  update real_bank_card set
	  	 user_basics_id=#{user_basics_id,jdbcType=INTEGER}
		,bank_card=#{bank_card,jdbcType=VARCHAR}
		,affiliated_bank=#{affiliated_bank,jdbcType=VARCHAR}
		,tel=#{tel,jdbcType=VARCHAR}
		,card_type=#{card_type,jdbcType=INTEGER}
		,cardholder_name=#{cardholder_name,jdbcType=VARCHAR}
	  where 1=1
	  and card_id=#{card_id,jdbcType=INTEGER} 
	</update>  
 
 <!-- 删除银行卡信息-->
 <delete id="deleteBank" parameterType="com.mrkb.dao.modle.bank.BankEntity" >
		delete from real_bank_card where card_id=#{card_id,jdbcType=INTEGER} ;
	</delete>
 
	
</mapper>